update-game-score: ${srcdir}/update-game-score.c ../src/config.h
	$(CC) ${ALL_CFLAGS} ${srcdir}/update-game-score.c $(LOADLIBES) -o update-game-score

/* These are NOT included in INSTALLABLES or UTILITIES.
   See ../src/Makefile.in.  */
