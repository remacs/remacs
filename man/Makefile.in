mostlyclean:
	rm -f *.log *.cp *.fn *.ky *.pg *.vr core *.tp *.core gnustmp.*

clean: mostlyclean
	rm -f *.dvi

distclean: clean

maintainer-clean: distclean
	rm -f *.aux *.cps *.fns *.kys *.pgs *.vrs *.toc
	for file in $(INFO_TARGETS); do rm -f $${file}*; done


